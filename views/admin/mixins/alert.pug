mixin alert(time)
  -if(message)
    -if(message.success && message.success.length > 0)
      div(id="toast" time=time)
        .toast.toast--success.active
          .toast__icon
            i.fa-solid.fa-circle-check
          .toast__body
            .toast__title
              h3 Success
            .toast__msg #{message.success}
              // Lấy phần tử đầu tiên
    -if(message.deleted && message.deleted.length > 0)
      div(id="toast" time=time)
        .toast.toast--error.active
          .toast__icon
            i.fa-solid.fa-eraser
          .toast__body
            .toast__title
              h3 Deleted
            .toast__msg #{message.deleted}
              // Lấy phần tử đầu tiên

    -if(message.error && message.error.length > 0)
      div(id="toast" time=time)
        .toast.toast--error.active
          .toast__icon
            i.fa-solid.fa-circle-exclamation
          .toast__body
            .toast__title
              h3 Error
            .toast__msg #{message.error}
          //- .toast__close
            i.fa-solid.fa-xmark


    -if(message.infor)
      #toast
        .toast.toast--info
          .toast__icon
            i.fa-solid.fa-circle-info
          .toast__body
            .toast__title
              h3 Info
            .toast__msg #{message.infor}
          //- .toast__close
            i.fa-solid.fa-xmark




    -if(message.warning)
      // Warning
      #toast
        .toast.toast--warning
          .toast__icon
            i.fa-solid.fa-circle-exclamation
          .toast__body
            .toast__title
              h3 Warning
            .toast__msg #{message.warning}
          //- .toast__close
          //-   i.fa-solid.fa-xmark



    -if(message.success_order && message.success_order.length > 0)
      div(id="toast" time=time)
        .toast.toast--success.active
          .toast__icon
            i.fa-solid.fa-circle-check
          .toast__body
            .toast__title
              h3 Success
            .toast__msg #{message.success_order[0]}
              // Lấy phần tử đầu tiên

