mixin pagination(pagination)
  nav.panagination
    ul.pagination
      if(pagination.currentPage>1)
        li.page-item
          button(class = "page-link"  button-pagination=1 ) Trang đầu 
        li.page-item
          button(class = "page-link"  button-pagination=pagination.currentPage-1 ) <<
      -for (var i = 1 ; i<= pagination.totalPage ; i++)
        li.page-item 
          button(class = "page-link "+(pagination.currentPage == i? "active": "") button-pagination= i  ) #{i}
      if(pagination.currentPage < pagination.totalPage)
        li.page-item
          button(class = "page-link"  button-pagination=pagination.currentPage+1 ) >>
        li.page-item
          button(class = "page-link"  button-pagination=pagination.totalPage ) Trang cuối
          

