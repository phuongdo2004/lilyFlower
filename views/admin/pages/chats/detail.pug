        //-       span
        //-   div(class="box-typing")
        //-     div(class="inner-name") Le Van B
        //-     div(class="inner-dots")
        //-       span
        //-       span
        //-       span
      div(
        class="custom-file-container" 
        data-upload-id="upload-images"
      )
      form(class ="formChat" action  my-id  = role_id)
        .chat-input
          input(type='text' name ="content" placeholder='Nhập nội dung...' )
          .input-actions
            i.far.fa-smile
            label( style  = "margin-bottom: 0"
              for="file-upload-with-preview-upload-images"
            ) <i class="fa-regular fa-image"></i>
            button( type ="submit")
              i.far.fa-paper-plane
              i.fa-solid.fa-thumbs-up.active
