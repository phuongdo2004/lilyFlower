extend ../../layouts/defaultChat.pug
include ../../mixins/alert.pug
include ../../mixins/pagination.pug
block main 
  .main__conntainer
    .chat-container
      .chat-header
        | Chat
        i.fa-solid.fa-x
      .chat-messages
        each chat in chats
          if(AccountId ==chat.userId)
            .messagechat.sent
              if(chat.content)
                .message-content
                  | #{chat.content}
              if(chat.images.length > 0)
                .message-images
                  each image in chat.images
                    img(src=image alt="Image" class="message-image")   
          else 
            .messagechat.received
              .user-info
                img.avatar(src=chat.infoUser.avatar alt="Image" class="message-image")
                span.username #{chat.infoUser.fullName}
              if(chat.content)
                .message-content
                  | #{chat.content}
              if(chat.images.length > 0)
              .message-images
                each image in chat.images
                  img(src=image alt="Image" class="message-image")
       
        div(class="inner-list-typing")
