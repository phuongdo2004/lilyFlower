extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
  .header__Main
    h1 Danh mục sản phẩm
  .listProducts
    .header
      | Danh sách
    +alert(3000)
    a(class = "create" href=`/${prefixAdmin}/product-category/add`)
      | + Thêm mới
    .list__container
      .list__containerCategory__header
       
        span STT
        span Hình ảnh
        span Tiêu đề
        span Vị trí
        span Trạng thái
        span Hành động
      if (productCategory.length>0)
        each item , index in productCategory
          .list__containerCategory__body
            span #{index+1}
            img(src=item.thumbnail alt='' style='height: 60px; width: auto')
            span #{item.title} 
            input(changeStatusPosition  type='number' style='width: 80px' value = item.position  name = "position" link = `/${prefixAdmin}/product-category/changePosition/${item.id}`)
            if (item.status =="active")
              button( class = "btn active" button-change-status  link=`/${prefixAdmin}/product-category/change-status/inactive/${item.id}` ) Hoạt động 
            else 
              button( class = "btn inactive" button-change-status link=`/${prefixAdmin}/product-category/change-status/active/${item.id}` ) Dừng hoạt động 
            .active__admin
              a(href=`/${prefixAdmin}/product-category/detail/${item.id}`)  Chi tiết
              a(href=`/${prefixAdmin}/product-category/edit/${item.id}`)  Sửa
              button(link = `/${prefixAdmin}/product-category/delete/${item.id}`) Xóa
      