section(class = "product" id="product-section")
  h1.heading
    | Latest 
    span Products
  .product_items
    each item in productsNew
      .product__items__item
        span -#{item.discountPercentage}%
        a.link(href=`products/detail/${item.slug}`) 
          .product__items__item__image(data-id=`${item.id}`)
            img(src=item.thumbnail, alt) 
        //- .add__toCart
        //-   a.fa-solid.fa-heart(href)
        //-   a.product__item__text(href = `/cart/add/${item.id}`) add To Cart
        //-   a.fa-solid.fa-share(href)
        .product_info
          .product__name #{item.title}
          .product__price
            .product__price_new $#{item.priceNew}
            .product__price__old $#{item.price}
