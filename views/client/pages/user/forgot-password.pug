include ../../mixins/alert.pug
doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title
    | Lấy lại mật khẩu
  link(rel='stylesheet' href='/css/main.css')
+alert(3000)
.mainForgotPass
  form#form-1.formforgotPass(action='' method='POST')
    h2.headingForgotPass Lấy lại mật khẩu
    .spacer
    .form-group-forgotPass
      label.form-label-forgotPass(for='email') Email 
      input#email.form-controlEmail(name='email' type='text' placeholder='' required)
      span.form-message
    button.form-submit-forgotPass Gửi OTP
script.
    // toast Message start
  function hideToast() {
    let toast = document.querySelector(".toast");
    if (toast) {
      toast.classList.add("hide");
      setTimeout(() => {
        toast.classList.remove("active", "hide"); // Xóa cả hai class sau hiệu ứng
      }, 500); // Thời gian khớp với transition (0.5s)
    }
  }

  // Thêm sự kiện đóng toast
  setTimeout(() => {
    hideToast();
  }, 3000);

