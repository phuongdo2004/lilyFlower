.mainForgotPass
  form#form-1.formforgotPass(action='/user/password/reset' method='POST')
    h2.headingForgotPass Đổi mật khẩu mới
    .spacer
    input(type='hidden' id='email' name='email' value=email)
    .form-group-forgotPass
      label.form-label-forgotPass(for='pasword') Mật khẩu mới&nbsp;&nbsp;&nbsp;
      input#email.form-controlEmail(name='password' type='text' placeholder='')
